<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:osgi="http://www.springframework.org/schema/osgi"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            file:///opt/equinox-loader/bundles/spring-beans-3.0.xsd
            http://www.springframework.org/schema/osgi
             file:///opt/equinox-loader/bundles/spring-osgi.xsd">

	
			 
    <bean id="consumer" class="org.tc.osgi.bundle.syslog.test.bean.SyslogProducteurConsomateurTestBean" init-method="startTimer" destroy-method="stopTimer" lazy-init="false" >
	    <property name="iLoggerUtilsService" ref="loggerServiceRef"/>
	    <property name="syslogClientService" ref="syslogClientServiceRef"/>
	    <property name="syslogServerService" ref="syslogServerServiceRef"/>
    </bean>

	<osgi:reference id="loggerServiceRef" interface="org.tc.osgi.bundle.utils.interf.module.service.ILoggerUtilsService"/>
    <osgi:reference id="syslogClientServiceRef" interface="org.tc.osgi.bundle.syslog.client.interf.module.service.ISyslogClientService"/>
    <osgi:reference id="syslogServerServiceRef" interface="org.tc.osgi.bundle.syslog.server.interf.module.service.ISyslogServerService"/>

</beans>